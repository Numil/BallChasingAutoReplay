<Page x:Class="BallChasing_replays.Views.UploadView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BallChasing_replays.Views"
      mc:Ignorable="d" 
      Title="UploadView">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Upload History" Margin="30 10 0 0" Grid.Row="0"/>
        <TextBox BorderBrush="Black" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                 Margin="30 10 30 30" Text="{Binding ConsoleText}" IsReadOnly="True" BorderThickness="1"
                 AcceptsReturn="True" TextWrapping="Wrap"
                 x:Name="ConsoleTextBox1"
                 VerticalScrollBarVisibility="Visible"/>

    </Grid>
</Page>
